<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Main Dashboard -->
    <LinearLayout
        android:id="@+id/dashboardLayout"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/logsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvFakeIp"
            style="@style/CyberText"
            android:text="IP: 192.168.1.1"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvCountry"
            style="@style/CyberText"
            android:text="Switzerland ðŸ‡¨ðŸ‡­"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="space_between"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:text="WireGuard"
                    style="@style/CyberText"/>
                <Switch
                    android:id="@+id/switchWireGuard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Tor"
                    style="@style/CyberText"/>
                <Switch
                    android:id="@+id/switchTor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:text="DNSCrypt"
                    style="@style/CyberText"/>
                <Switch
                    android:id="@+id/switchDNSCrypt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:text="Auto IP Change"
                style="@style/CyberText"
                android:layout_weight="1"/>

            <Switch
                android:id="@+id/switchAutoIpChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnChangeIp"
            style="@style/CyberButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change IP"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnConnect"
            style="@style/CyberButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect"/>

        <ProgressBar
            android:id="@+id/progressConnecting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleLarge"
            android:indeterminate="true"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <!-- Live Logs View -->
    <LinearLayout
        android:id="@+id/logsLayout"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#222222"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/dashboardLayout"
        app:layout_constraintBottom_toTopOf="@+id/settingsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:text="Live Logs"
            style="@style/CyberText"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <ScrollView
            android:id="@+id/scrollViewLogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <TextView
                android:id="@+id/tvLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp"
                android:fontFamily="monospace"/>
        </ScrollView>
    </LinearLayout>

    <!-- Advanced Settings -->
    <LinearLayout
        android:id="@+id/settingsLayout"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1a1a1a"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:text="Advanced Settings"
            style="@style/CyberText"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:text="Kill Switch"
                style="@style/CyberText"
                android:layout_weight="1"/>

            <Switch
                android:id="@+id/switchKillSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:text="Split Tunneling"
                style="@style/CyberText"
                android:layout_weight="1"/>

            <Switch
                android:id="@+id/switchSplitTunneling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:text="Multi-hop Routing"
                style="@style/CyberText"
                android:layout_weight="1"/>

            <Switch
                android:id="@+id/switchMultiHop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:text="Preferred DNS Resolvers"
                style="@style/CyberText"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/spinnerDnsResolvers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/dns_resolvers"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
